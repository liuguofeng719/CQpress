<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/button_text_color" />
            <stroke android:width="1dp" android:color="@color/button_text_color" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/common_text_color" />
            <stroke android:width="1dp" android:color="@color/common_text_color" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="@color/common_text_color" />
            <stroke android:width="1dp" android:color="@color/common_text_color" />
        </shape>
    </item>
</selector>